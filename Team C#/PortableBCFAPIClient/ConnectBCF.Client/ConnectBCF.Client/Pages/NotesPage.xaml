<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="page"
             x:Class="ConnectBCF.Client.Pages.NotesPage">
  <ListView ItemsSource="{Binding Notes}" ItemSelected="OnNoteSelected" SelectedItem="{Binding SelectedNote, Mode=TwoWay}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Title}" Detail="{Binding NoteId}" DetailColor="Gray">
          <TextCell.ContextActions>
            <MenuItem Text="Delete" IsDestructive="True" Command="{Binding BindingContext.DeleteNoteCommand, Source={x:Reference page}}" CommandParameter="{Binding .}"/>
          </TextCell.ContextActions>
        </TextCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>